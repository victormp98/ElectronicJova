<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ElectronicJova</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ElectronicJova.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.datatables.net/2.0.8/css/dataTables.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.10.6/dist/sweetalert2.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
@using Microsoft.AspNetCore.Identity
@using ElectronicJova.Models
@inject IHttpContextAccessor HttpContextAccessor
@inject UserManager<ApplicationUser> UserManager
</head>
<body class="d-flex flex-column min-vh-100">
    <!-- Header visible solo al imprimir -->
    <div class="print-header d-none">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="fw-bold mb-0" style="color: #000; font-size: 24pt;">ElectronicJova</h1>
                <p class="mb-0 small">Tecnología de última generación</p>
            </div>
            <div class="text-end">
                <p class="mb-0 fw-bold">REPORTE OFICIAL</p>
                <p class="mb-0 small">@DateTime.Now.ToString("dd/MM/yyyy HH:mm")</p>
            </div>
        </div>
    </div>

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark box-shadow">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-lightning-charge-fill me-1"></i>ElectronicJova
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarMain">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                        @if (User.IsInRole(SD.Role_Admin))
                        {
                            <li class="nav-item">
                                <a class="nav-link fw-bold text-info" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                                    <i class="bi bi-shield-lock-fill me-1"></i>Panel Admin
                                </a>
                            </li>
                        }
                    </ul>

                    <div class="d-flex flex-grow-1 mx-lg-4 my-2 my-lg-0 justify-content-center search-container" style="max-width: 500px;">
                        <form class="input-group" asp-controller="Home" asp-action="Search" method="get">
                            <input class="form-control" type="search" placeholder="Buscar productos..." name="searchString">
                            <button class="btn" type="submit">
                                <i class="bi bi-search"></i>
                            </button>
                        </form>
                    </div>

                    <ul class="navbar-nav align-items-center">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                                    <div class="d-flex align-items-center gap-2">
                                        <div class="rounded-circle bg-primary d-flex align-items-center justify-content-center text-white fw-bold" style="width: 32px; height: 32px; font-size: 0.8rem;">
                                            @{
                                                var firstLetter = "U";
                                                var displayName = "Usuario";
                                                try {
                                                    var user = await UserManager.GetUserAsync(User);
                                                    displayName = user?.Name ?? User.Identity?.Name ?? "Usuario";
                                                    if (!string.IsNullOrEmpty(displayName)) firstLetter = displayName.Substring(0, 1).ToUpper();
                                                } catch {
                                                    displayName = User.Identity?.Name ?? "Usuario";
                                                    if (!string.IsNullOrEmpty(displayName)) firstLetter = displayName.Substring(0, 1).ToUpper();
                                                }
                                            }
                                            @firstLetter
                                        </div>
                                        <span>@displayName</span>
                                    </div>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end dropdown-menu-dark shadow border-secondary mt-2">
                                    @if (!User.IsInRole(SD.Role_Admin))
                                    {
                                        <li><a class="dropdown-item" asp-area="Customer" asp-controller="Wishlist" asp-action="Index"><i class="bi bi-heart me-2 text-danger"></i>Mis Favoritos</a></li>
                                        <li><a class="dropdown-item" asp-area="Customer" asp-controller="Order" asp-action="Index"><i class="bi bi-box-seam me-2 text-info"></i>Mis Pedidos</a></li>
                                    }
                                    <li><a class="dropdown-item" asp-area="Customer" asp-controller="Order" asp-action="Profile"><i class="bi bi-person me-2 text-warning"></i>Mi Perfil</a></li>
                                    <li><hr class="dropdown-divider border-secondary"></li>
                                    <li><partial name="_LoginPartial" /></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <partial name="_LoginPartial" />
                        }

                        @if (User.Identity!.IsAuthenticated && !User.IsInRole(SD.Role_Admin))
                        {
                            <li class="nav-item ms-lg-3">
                                <a class="btn btn-outline-info d-flex align-items-center gap-2 position-relative px-3 py-2" 
                                   asp-area="Customer" asp-controller="Cart" asp-action="Index"
                                   style="border-radius: 10px; border-width: 2px;">
                                    <i class="bi bi-cart3 fs-5"></i>
                                    <span class="d-none d-lg-inline fw-bold me-1">Mi Carrito</span>
                                    @if(HttpContextAccessor.HttpContext?.Session?.GetInt32("CartItemCount") != null && HttpContextAccessor.HttpContext.Session.GetInt32("CartItemCount") > 0)
                                    {
                                        <span class="badge bg-danger rounded-pill shadow-sm" style="font-size: 0.7rem;">
                                            @HttpContextAccessor.HttpContext.Session.GetInt32("CartItemCount")
                                        </span>
                                    }
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main role="main" class="flex-grow-1 pb-3">
        @RenderBody()
    </main>


    <footer class="footer mt-auto bg-surface border-top border-dark py-3 text-center">
        <div class="container">
            <small class="text-muted" style="font-size: 0.75rem;">
                &copy; 2026 <span class="fw-bold text-light">ElectronicJova</span> &mdash; <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-secondary text-decoration-none">Privacidad</a>
            </small>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script src="https://cdn.datatables.net/2.0.8/js/dataTables.min.js" asp-append-version="true"></script>
    
    @* Initializing Bootstrap Tooltips *@
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl)
            })
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
    
    @* Live Search Script *@
    <script>
        $(document).ready(function () {
            const searchInput = $('input[name="searchString"]');
            const searchForm = searchInput.closest('form');
            const searchContainer = searchInput.closest('.search-container');
            
            // Add suggestions container
            const suggestionsContainer = $('<div class="list-group position-absolute w-100 shadow" id="search-suggestions" style="z-index: 1000; display: none; top: 100%;"></div>');
            searchContainer.append(suggestionsContainer);
            searchContainer.css('position', 'relative');

            let timeout = null;
            searchInput.on('input', function() {
                const query = $(this).val();
                clearTimeout(timeout);
                
                if (query.length < 2) {
                    suggestionsContainer.hide().empty();
                    return;
                }

                timeout = setTimeout(function() {
                    $.get('/Home/GetSuggestions', { query: query }, function(data) {
                        suggestionsContainer.empty();
                        if (data && data.length > 0) {
                            data.forEach(item => {
                                const link = $(`<a href="/Home/Details/${item.id}" class="list-group-item list-group-item-action bg-dark text-light border-secondary">${item.title}</a>`);
                                suggestionsContainer.append(link);
                            });
                            suggestionsContainer.show();
                        } else {
                            suggestionsContainer.hide();
                        }
                    });
                }, 300);
            });

            $(document).on('click', function(e) {
                if (!$(e.target).closest('.search-container').length) {
                    suggestionsContainer.hide();
                }
            });
        });
    </script>
</body>
</html>
