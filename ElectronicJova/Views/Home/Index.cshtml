@model PaginatedList<Product>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid p-0 mb-5">
    <div class="row m-0" style="background: linear-gradient(rgba(15, 23, 42, 0.8), rgba(15, 23, 42, 0.9)), url('https://images.unsplash.com/photo-1550745165-9bc0b252726f?ixlib=rb-4.0.3&auto=format&fit=crop&w=1920&q=80'); background-size: cover; background-position: center; min-height: 400px; display: flex; align-items: center;">
        <div class="col-12 text-center text-white py-5">
            <h1 class="display-3 fw-bold hero-gradient-text">Welcome to the Future</h1>
            <p class="lead fs-4 mb-4">Discover next-gen electronics at unbeatable prices.</p>
            <a href="#products" class="btn btn-primary btn-lg rounded-pill px-5 shadow-lg">Shop Now</a>
        </div>
    </div>
</div>

<div class="container" id="products">
    <div class="row pb-3">
        @foreach (var product in Model)
        {
            <div class="col-6 col-md-4 col-lg-3 mb-4">
                <div class="card h-100 border-0 shadow-sm overflow-hidden" style="animation: fadeIn 0.5s ease-in-out;">
                    <div style="height: 200px; overflow: hidden; position: relative;">
                        <img src="@product.ImageUrl" class="card-img-top w-100 h-100" style="object-fit: cover; transition: transform 0.5s ease;" onmouseover="this.style.transform='scale(1.1)'" onmouseout="this.style.transform='scale(1)'" loading="lazy"/>
                        @if(product.Stock > 0)
                        {
                             <span class="badge bg-success position-absolute top-0 end-0 m-2">In Stock: @product.Stock</span>
                        }
                        else
                        {
                             <span class="badge bg-danger position-absolute top-0 end-0 m-2">Out of Stock</span>
                        }
                    </div>
                    
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-truncate">@product.Title</h5>
                        <p class="card-text text-muted mb-auto">by @product.Author</p>
                        
                        <div class="mt-3">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="text-decoration-line-through text-muted small">@product.ListPrice.ToString("c")</span>
                                <span class="h5 mb-0 text-primary">@product.Price100.ToString("c")</span>
                            </div>
                            <a asp-action="Details" asp-route-productId="@product.Id" class="btn btn-primary w-100 rounded-pill">View Details</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Pagination Controls -->
    @if (Model.TotalPages > 1)
    {
        <div class="d-flex justify-content-center mt-4">
            <nav aria-label="Page navigation">
                <ul class="pagination">
                    @{
                        var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
                        var nextDisabled = !Model.HasNextPage ? "disabled" : "";
                    }
                    
                    <li class="page-item @prevDisabled">
                        <a class="page-link rounded-pill px-3 me-2 shadow-sm" asp-action="Index"
                           asp-route-pageNumber="@(Model.PageIndex - 1)"
                           aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span> Previous
                        </a>
                    </li>

                    <li class="page-item active" aria-current="page">
                        <span class="page-link rounded-circle mx-1 shadow-sm">@Model.PageIndex</span>
                    </li>

                    <li class="page-item @nextDisabled">
                        <a class="page-link rounded-pill px-3 ms-2 shadow-sm" asp-action="Index"
                           asp-route-pageNumber="@(Model.PageIndex + 1)"
                           aria-label="Next">
                            Next <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    }
</div>

<style>
    .hero-gradient-text {
        background: linear-gradient(135deg, #60a5fa 0%, #3b82f6 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-size: calc(1.5rem + 3.5vw);
    }
    
    .pagination .page-link {
        border: none;
        color: #3b82f6;
        transition: all 0.3s ease;
    }
    
    .pagination .page-item.active .page-link {
        background-color: #3b82f6;
        color: white;
    }
    
    .pagination .page-link:hover:not(.active) {
        background-color: #f1f5f9;
        transform: translateY(-2px);
    }

    @@keyframes fadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }
</style>
