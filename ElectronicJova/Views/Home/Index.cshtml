@model PaginatedList<Product>

@{
    ViewData["Title"] = "ElectronicJova — Tecnología de última generación";
}

<div class="p-0 mb-5">
    <div class="row m-0 hero-section">
        <div class="col-12 text-center py-5 position-relative" style="z-index:1;">
            <span class="badge rounded-pill mb-3 px-3 py-2" style="background: rgba(0,212,255,0.1); color: var(--cyan); border: 1px solid var(--border-accent); font-size: 0.75rem; letter-spacing: 0.08em; text-transform: uppercase;">
                <i class="bi bi-lightning-charge-fill me-1"></i>Tecnología de última generación
            </span>
            <h1 class="display-2 fw-bold mb-3" style="background: linear-gradient(135deg, #E8EDF5 30%, var(--cyan) 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text; letter-spacing: -2px;">ElectronicJova</h1>
            <p class="lead mb-4" style="color: var(--text-secondary); font-size: 1.15rem; max-width: 480px; margin: 0 auto 1.5rem;">Los mejores productos tech a precios increíbles. Envío rápido y garantía total.</p>
            <a href="#products" class="btn btn-primary btn-lg rounded-pill px-5 shadow-sm">
                <i class="bi bi-grid me-2"></i>Ver Productos
            </a>
        </div>
    </div>
</div>

<div class="container" id="products">
    <div class="row pb-3">
        @foreach (var product in Model)
        {
            <div class="col-6 col-md-4 col-lg-3 mb-4">
                <a asp-action="Details" asp-route-id="@product.Id" class="product-card h-100">
                    <div class="position-relative">
                        <img src="@product.ImageUrl" class="card-img-top" alt="@product.Title" loading="lazy"/>
                        
                        @* Stock Badges *@
                        @if(product.Stock <= 0)
                        {
                             <span class="badge bg-danger position-absolute top-0 start-0 m-2">Agotado</span>
                        }
                        else if(product.Stock < 5)
                        {
                             <span class="badge bg-warning text-dark position-absolute top-0 start-0 m-2">¡Últimas unidades!</span>
                        }

                        @* Offer Badge *@
                        @if(product.ListPrice > product.Price100)
                        {
                            <span class="badge bg-success position-absolute top-0 end-0 m-2">
                                -@(Math.Round((1 - (double)product.Price100 / (double)product.ListPrice) * 100))% OFF
                            </span>
                        }
                    </div>
                    
                    <div class="card-body">
                        <h5 class="card-title">@product.Title</h5>
                        <p class="small text-muted mb-2">@product.Author</p>
                        
                        <div class="price mt-auto">
                            @product.Price100.ToString("c")
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>

    <!-- Pagination Controls -->
    @if (Model.TotalPages > 1)
    {
        <div class="d-flex justify-content-center mt-4">
            <nav aria-label="Page navigation">
                <ul class="pagination">
                    @{
                        var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
                        var nextDisabled = !Model.HasNextPage ? "disabled" : "";
                    }
                    
                    <li class="page-item @prevDisabled">
                        <a class="page-link rounded-pill px-3 me-2 shadow-sm" asp-action="Index"
                           asp-route-pageNumber="@(Model.PageIndex - 1)"
                           aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span> Previous
                        </a>
                    </li>

                    <li class="page-item active" aria-current="page">
                        <span class="page-link rounded-circle mx-1 shadow-sm">@Model.PageIndex</span>
                    </li>

                    <li class="page-item @nextDisabled">
                        <a class="page-link rounded-pill px-3 ms-2 shadow-sm" asp-action="Index"
                           asp-route-pageNumber="@(Model.PageIndex + 1)"
                           aria-label="Next">
                            Next <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    }
</div>

<style>
    .hero-gradient-text {
        background: linear-gradient(135deg, #60a5fa 0%, #3b82f6 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-size: calc(1.5rem + 3.5vw);
    }
    
    .pagination .page-link {
        border: none;
        color: #3b82f6;
        transition: all 0.3s ease;
    }
    
    .pagination .page-item.active .page-link {
        background-color: #3b82f6;
        color: white;
    }
    
    .pagination .page-link:hover:not(.active) {
        background-color: #f1f5f9;
        transform: translateY(-2px);
    }

    @@keyframes fadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }
</style>
