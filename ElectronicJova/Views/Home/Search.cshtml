@using ElectronicJova.Models.ViewModels
@model SearchVM

@{
    ViewData["Title"] = "Search Results";
}

<div class="container">
    <div class="row pt-4">
        <div class="col-12">
            <h1 class="display-4 text-primary">Search Products</h1>
            <hr />
        </div>
    </div>

    <!-- Search and Filter Form -->
    <div class="row mb-4">
        <div class="col-12">
            <form asp-controller="Home" asp-action="Search" method="get" class="row g-3 align-items-end">
                <div class="col-md-6">
                    <label for="searchString" class="form-label">Product Name or Description</label>
                    <input type="text" name="searchString" class="form-control" id="searchString" placeholder="e.g., Lord of the Rings" value="@Model.SearchString">
                </div>
                <div class="col-md-4">
                    <label asp-for="CategoryId" class="form-label">Category</label>
                    <select asp-for="CategoryId" asp-items="@Model.CategoryList" class="form-select">
                        <option value="">All Categories</option>
                    </select>
                </div>
                <div class="col-md-2 d-grid">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-search"></i> Filter
                    </button>
                </div>
            </form>
        </div>
    </div>


    @if (Model.Products != null && Model.Products.Any())
    {
    <!-- Product Cards -->
    <div class="row pb-3">
        @foreach (var product in Model.Products)
        {
            <div class="col-6 col-md-4 col-lg-3 mb-4">
                <a asp-action="Details" asp-route-id="@product.Id" class="product-card h-100">
                    <div class="position-relative">
                        <img src="@(string.IsNullOrEmpty(product.ImageUrl) ? "https://via.placeholder.com/300x200?text=No+Image" : product.ImageUrl)" class="card-img-top" alt="@product!.Title" loading="lazy"/>
                        
                        @* Stock Badges *@
                        @if(product.Stock <= 0)
                        {
                             <span class="badge bg-danger position-absolute top-0 start-0 m-2">Agotado</span>
                        }
                        else if(product.Stock < 5)
                        {
                             <span class="badge bg-warning text-dark position-absolute top-0 start-0 m-2">¡Últimas unidades!</span>
                        }

                        @* Offer Badge *@
                        @if(product.ListPrice > product.Price100)
                        {
                            <span class="badge bg-success position-absolute top-0 end-0 m-2">
                                -@(Math.Round((1 - (double)product.Price100 / (double)product.ListPrice) * 100))% OFF
                            </span>
                        }
                    </div>
                    
                    <div class="card-body">
                        <h5 class="card-title">@product!.Title</h5>
                        <p class="small text-muted mb-2">@product!.Author</p>
                        
                        <div class="price mt-auto">
                            @product!.Price100.ToString("c")
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
    }
    else
    {
        <div class="row mt-5">
            <div class="col-12 text-center">
                <p class="lead">No products found matching your criteria.</p>
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Back to Home</a>
            </div>
        </div>
    }

    <!-- Pagination Controls -->
    @if (Model.Products != null && Model.Products.TotalPages > 1)
    {
        <div class="d-flex justify-content-center mt-4">
            <nav aria-label="Page navigation">
                <ul class="pagination">
                    @{
                        var prevDisabled = !Model.Products.HasPreviousPage ? "disabled" : "";
                        var nextDisabled = !Model.Products.HasNextPage ? "disabled" : "";
                    }
                    
                    <li class="page-item @prevDisabled">
                        <a class="page-link" asp-action="Search"
                           asp-route-pageNumber="@(Model.Products.PageIndex - 1)"
                           asp-route-searchString="@Model.SearchString"
                           asp-route-categoryId="@Model.CategoryId"
                           aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span> Previous
                        </a>
                    </li>

                    <li class="page-item active" aria-current="page">
                        <span class="page-link">Page @Model.Products.PageIndex of @Model.Products.TotalPages</span>
                    </li>

                    <li class="page-item @nextDisabled">
                        <a class="page-link" asp-action="Search"
                           asp-route-pageNumber="@(Model.Products.PageIndex + 1)"
                           asp-route-searchString="@Model.SearchString"
                           asp-route-categoryId="@Model.CategoryId"
                           aria-label="Next">
                            Next <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    }
</div>
