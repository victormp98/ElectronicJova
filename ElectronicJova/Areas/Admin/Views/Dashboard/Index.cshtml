@model ElectronicJova.Models.ViewModels.DashboardVM

@{
    ViewData["Title"] = "Dashboard Administrativo";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0 fw-bold text-light">
            <i class="bi bi-speedometer2 me-2 text-info"></i>Panel de Administración
        </h2>
        <div class="d-flex align-items-center gap-2">
            <button onclick="window.print()" class="btn btn-outline-info rounded-pill">
                <i class="bi bi-printer me-1"></i> Imprimir Reporte
            </button>
            <div class="text-secondary small">
                <i class="bi bi-calendar3 me-1"></i> @DateTime.Today.ToString("dd MMMM yyyy")
            </div>
        </div>
    </div>

    <!-- KPI Cards -->
    <div class="row g-4 mb-5">
        <!-- Ventas Hoy -->
        <div class="col-12 col-sm-6 col-xl-4">
            <div class="card border-0 shadow-sm h-100 bg-card">
                <div class="card-body p-4 position-relative overflow-hidden">
                    <div class="position-absolute top-0 end-0 p-3 opacity-25">
                        <i class="bi bi-cash-stack display-1 text-success"></i>
                    </div>
                    <div class="position-relative z-1">
                        <h6 class="text-secondary text-uppercase fw-bold mb-1" style="font-size: 0.75rem; letter-spacing: 1px;">Ventas de Hoy</h6>
                        <h2 class="mb-0 fw-bold text-success">@Model.TotalSalesToday.ToString("c")</h2>
                        <div class="mt-3 small text-muted">
                            <i class="bi bi-info-circle me-1"></i> Solo pagos aprobados hoy
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Pedidos Pendientes -->
        <div class="col-12 col-sm-6 col-xl-4">
            <div class="card border-0 shadow-sm h-100 bg-card">
                <div class="card-body p-4 position-relative overflow-hidden">
                    <div class="position-absolute top-0 end-0 p-3 opacity-25">
                        <i class="bi bi-clock-history display-1 text-warning"></i>
                    </div>
                    <div class="position-relative z-1">
                        <h6 class="text-secondary text-uppercase fw-bold mb-1" style="font-size: 0.75rem; letter-spacing: 1px;">Pedidos Pendientes</h6>
                        <h2 class="mb-0 fw-bold text-warning">@Model.PendingOrders</h2>
                        <div class="mt-3 small text-muted">
                            <i class="bi bi-exclamation-triangle-fill me-1"></i> Requieren atención
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Total Productos -->
        <div class="col-12 col-sm-6 col-xl-4">
            <div class="card border-0 shadow-sm h-100 bg-card">
                <div class="card-body p-4 position-relative overflow-hidden">
                    <div class="position-absolute top-0 end-0 p-3 opacity-25">
                        <i class="bi bi-box-seam display-1 text-info"></i>
                    </div>
                    <div class="position-relative z-1">
                        <h6 class="text-secondary text-uppercase fw-bold mb-1" style="font-size: 0.75rem; letter-spacing: 1px;">Catálogo</h6>
                        <h2 class="mb-0 fw-bold text-info">@Model.TotalProducts</h2>
                        <div class="mt-3 small text-muted">
                            <i class="bi bi-check-circle-fill me-1"></i> Productos activos
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 mb-4">
        <!-- Gráfico de Ventas -->
        <div class="col-12">
            <div class="card border-secondary bg-card shadow-sm">
                <div class="card-header bg-transparent border-secondary py-3 d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold text-light">
                        <i class="bi bi-bar-chart-line me-2 text-info"></i>Rendimiento de Ventas (Últimos 7 días)
                    </h5>
                    <span class="badge bg-info bg-opacity-10 text-info border border-info px-3">Actualizado en tiempo real</span>
                </div>
                <div class="card-body p-4">
                    <div style="height: 300px;">
                        <canvas id="salesChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Productos más vendidos -->
        <div class="col-12 col-lg-8">
            <div class="card border-secondary bg-card shadow-sm h-100">
                <div class="card-header bg-transparent border-secondary py-3">
                    <h5 class="mb-0 fw-bold text-light">
                        <i class="bi bi-graph-up-arrow me-2 text-danger"></i>Productos más vendidos
                    </h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-dark table-hover align-middle mb-0 bg-transparent">
                            <thead>
                                <tr class="text-secondary small text-uppercase fw-bold">
                                    <th class="ps-4 py-3">Producto</th>
                                    <th class="py-3">Precio</th>
                                    <th class="py-3">Inventario</th>
                                    <th class="text-end pe-4 py-3">Acción</th>
                                </tr>
                            </thead>
                            <tbody class="border-top border-secondary">
                                @if (Model.TopProducts.Any())
                                {
                                    @foreach (var product in Model.TopProducts)
                                    {
                                        <tr>
                                            <td class="ps-4 py-3">
                                                <div class="d-flex align-items-center">
                                                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                                                    {
                                                        <img src="@ImageUrlHelper.GetDisplayUrl(product.ImageUrl, "https://via.placeholder.com/45?text=No+Image")" width="45" height="45" class="rounded shadow-sm me-3 object-fit-cover" alt="@product.Name">
                                                    }
                                                    else
                                                    {
                                                        <div class="bg-dark rounded me-3 d-flex align-items-center justify-content-center border border-secondary" style="width: 45px; height: 45px;">
                                                            <i class="bi bi-image text-muted"></i>
                                                        </div>
                                                    }
                                                    <div>
                                                        <div class="fw-bold text-light">@product.Name</div>
                                                        <div class="text-muted small">@product.Model</div>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="py-3">
                                                <span class="fw-bold text-info">@product.Price.ToString("c")</span>
                                            </td>
                                            <td class="py-3">
                                                @if (product.Stock <= 5)
                                                {
                                                    <span class="badge bg-danger bg-opacity-10 text-danger rounded-pill px-3 border border-danger">Bajo: @product.Stock</span>
                                                }
                                                else if (product.Stock <= 20)
                                                {
                                                    <span class="badge bg-warning bg-opacity-10 text-warning rounded-pill px-3 border border-warning">Medio: @product.Stock</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-success bg-opacity-10 text-success rounded-pill px-3 border border-success">Ok: @product.Stock</span>
                                                }
                                            </td>
                                            <td class="text-end pe-4 py-3">
                                                <a asp-controller="Product" asp-action="Upsert" asp-route-id="@product.Id" 
                                                   class="btn btn-sm btn-outline-info rounded-circle p-2" title="Editar">
                                                    <i class="bi bi-pencil-fill"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="4" class="text-center py-5 text-muted">
                                            <i class="bi bi-inbox fs-1 d-block mb-3 opacity-25"></i>
                                            Aún no hay datos de ventas para mostrar.
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Acciones Rápidas -->
        <div class="col-12 col-lg-4 no-print">
            <div class="card border-secondary bg-card shadow-sm h-100">
                <div class="card-header bg-transparent border-secondary py-3">
                    <h5 class="mb-0 fw-bold text-light">
                        <i class="bi bi-lightning-charge me-2 text-warning"></i>Accesos Directos
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-3">
                        <a asp-area="Admin" asp-controller="Order" asp-action="Index" class="btn btn-outline-light border-secondary text-start py-3 px-4 rounded-3 d-flex align-items-center justify-content-between transition hover-bg-dark">
                            <div class="d-flex align-items-center">
                                <div class="bg-primary bg-opacity-10 p-2 rounded-3 me-3">
                                    <i class="bi bi-receipt fs-4 text-primary"></i>
                                </div>
                                <div>
                                    <div class="fw-bold">Pedidos</div>
                                    <small class="text-muted">Gestión de estados</small>
                                </div>
                            </div>
                            <i class="bi bi-chevron-right text-muted"></i>
                        </a>
                        
                        <a asp-area="Admin" asp-controller="Product" asp-action="Index" class="btn btn-outline-light border-secondary text-start py-3 px-4 rounded-3 d-flex align-items-center justify-content-between transition hover-bg-dark">
                            <div class="d-flex align-items-center">
                                <div class="bg-secondary bg-opacity-10 p-2 rounded-3 me-3">
                                    <i class="bi bi-box fs-4 text-info"></i>
                                </div>
                                <div>
                                    <div class="fw-bold">Inventario</div>
                                    <small class="text-muted">Catálogo de productos</small>
                                </div>
                            </div>
                            <i class="bi bi-chevron-right text-muted"></i>
                        </a>

                        <a asp-area="Admin" asp-controller="Category" asp-action="Index" class="btn btn-outline-light border-secondary text-start py-3 px-4 rounded-3 d-flex align-items-center justify-content-between transition hover-bg-dark">
                            <div class="d-flex align-items-center">
                                <div class="bg-success bg-opacity-10 p-2 rounded-3 me-3">
                                    <i class="bi bi-tags fs-4 text-success"></i>
                                </div>
                                <div>
                                    <div class="fw-bold">Categorías</div>
                                    <small class="text-muted">Organizar tienda</small>
                                </div>
                            </div>
                            <i class="bi bi-chevron-right text-muted"></i>
                        </a>
                    </div>

                    <div class="mt-5 p-4 rounded-3 text-center border border-secondary border-dashed" style="background: rgba(255,255,255,0.02);">
                        <i class="bi bi-shield-check fs-2 text-muted mb-3 d-block"></i>
                        <h6 class="fw-bold text-light">Modo Administrador</h6>
                        <p class="small text-muted mb-0">Este panel es privado y solo accesible para usuarios con privilegios elevados.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Plantilla de Reporte Administrativo (Oculta en pantalla) -->
<partial name="_PrintReport" model="Model" />

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const ctx = document.getElementById('salesChart').getContext('2d');
            
            const labels = @Html.Raw(Json.Serialize(Model.Last7DaysSales.Select(s => s.Date)));
            const data = @Html.Raw(Json.Serialize(Model.Last7DaysSales.Select(s => s.Total)));

            new Chart(ctx, {
                type: 'line',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'Ventas ($)',
                        data: data,
                        borderColor: '#00d4ff',
                        backgroundColor: 'rgba(0, 212, 255, 0.1)',
                        borderWidth: 3,
                        tension: 0.4,
                        fill: true,
                        pointBackgroundColor: '#00d4ff',
                        pointBorderColor: '#fff',
                        pointHoverRadius: 6,
                        pointRadius: 4
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        },
                        tooltip: {
                            backgroundColor: '#1a2235',
                            titleColor: '#fff',
                            bodyColor: '#94a3b8',
                            borderColor: '#334155',
                            borderWidth: 1,
                            padding: 10,
                            displayColors: false,
                            callbacks: {
                                label: function(context) {
                                    return 'Ventas: $' + context.parsed.y.toLocaleString();
                                }
                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: {
                                color: 'rgba(255, 255, 255, 0.05)',
                                drawBorder: false
                            },
                            ticks: {
                                color: '#64748b',
                                callback: function(value) {
                                    return '$' + value.toLocaleString();
                                }
                            }
                        },
                        x: {
                            grid: {
                                display: false
                            },
                            ticks: {
                                color: '#64748b'
                            }
                        }
                    }
                }
            });

            // Lógica para capturar el gráfico antes de imprimir
            window.onbeforeprint = function () {
                const canvas = document.getElementById('salesChart');
                const printImg = document.getElementById('print-chart-img');
                const loadingMsg = document.getElementById('chart-loading-msg');
                
                if (canvas && printImg) {
                    printImg.src = canvas.toDataURL('image/png');
                    printImg.style.display = 'block';
                    if (loadingMsg) loadingMsg.style.display = 'none';
                }
            };
        });
    </script>
}

<style>
    .hover-bg-dark:hover {
        background-color: rgba(255, 255, 255, 0.05);
        border-color: var(--border-accent) !important;
        transform: translateY(-2px);
    }
    .transition {
        transition: all 0.3s ease;
    }
    .border-dashed {
        border-style: dashed !important;
    }
</style>
