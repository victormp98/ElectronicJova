@model ElectronicJova.Models.ViewModels.DashboardVM

@{
    ViewData["Title"] = "Dashboard Administrativo";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0 fw-bold">
            <i class="bi bi-speedometer2 me-2 text-primary"></i>Panel de Administración
        </h2>
        <div class="text-muted small">
            <i class="bi bi-calendar3 me-1"></i> @DateTime.Today.ToString("dd MMMM yyyy")
        </div>
    </div>

    <!-- KPI Cards -->
    <div class="row g-4 mb-5">
        <!-- Ventas Hoy -->
        <div class="col-12 col-sm-6 col-xl-4">
            <div class="card border-0 shadow-sm bg-gradient text-white h-100" style="background: linear-gradient(45deg, #0d6efd, #198754);">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-white-50 text-uppercase fw-bold mb-1" style="font-size: 0.75rem; letter-spacing: 1px;">Ventas de Hoy</h6>
                            <h2 class="mb-0 fw-bold">@Model.TotalSalesToday.ToString("c")</h2>
                        </div>
                        <div class="bg-white bg-opacity-25 rounded-circle p-3">
                            <i class="bi bi-cash-stack fs-2 text-white"></i>
                        </div>
                    </div>
                    <div class="mt-3 small">
                        <i class="bi bi-info-circle me-1"></i> Solo pagos aprobados hoy
                    </div>
                </div>
            </div>
        </div>

        <!-- Pedidos Pendientes -->
        <div class="col-12 col-sm-6 col-xl-4">
            <div class="card border-0 shadow-sm bg-warning text-dark h-100">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-dark-50 text-uppercase fw-bold mb-1" style="font-size: 0.75rem; letter-spacing: 1px;">Pedidos Pendientes</h6>
                            <h2 class="mb-0 fw-bold">@Model.PendingOrders</h2>
                        </div>
                        <div class="bg-dark bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-clock-history fs-2 text-dark"></i>
                        </div>
                    </div>
                    <div class="mt-3 small text-dark-50">
                        <i class="bi bi-exclamation-triangle-fill me-1"></i> Requieren atención inmediata
                    </div>
                </div>
            </div>
        </div>

        <!-- Total Productos -->
        <div class="col-12 col-sm-6 col-xl-4">
            <div class="card border-0 shadow-sm bg-info text-white h-100">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-white-50 text-uppercase fw-bold mb-1" style="font-size: 0.75rem; letter-spacing: 1px;">Catálogo de Productos</h6>
                            <h2 class="mb-0 fw-bold">@Model.TotalProducts</h2>
                        </div>
                        <div class="bg-white bg-opacity-25 rounded-circle p-3">
                            <i class="bi bi-box-seam fs-2 text-white"></i>
                        </div>
                    </div>
                    <div class="mt-3 small">
                        <i class="bi bi-check-circle-fill me-1"></i> Productos activos en tienda
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Productos más vendidos -->
        <div class="col-12 col-lg-8">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white py-3 border-0">
                    <h5 class="mb-0 fw-bold">
                        <i class="bi bi-graph-up-arrow me-2 text-danger"></i>Productos más vendidos
                    </h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light">
                                <tr class="text-muted small text-uppercase fw-bold">
                                    <th class="ps-4 py-3">Producto</th>
                                    <th class="py-3">Precio</th>
                                    <th class="py-3">Inventario</th>
                                    <th class="text-end pe-4 py-3">Acción</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.TopProducts.Any())
                                {
                                    @foreach (var product in Model.TopProducts)
                                    {
                                        <tr>
                                            <td class="ps-4 py-3">
                                                <div class="d-flex align-items-center">
                                                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                                                    {
                                                        <img src="@product.ImageUrl" width="45" height="45" class="rounded shadow-sm me-3 object-fit-cover" alt="@product.Title">
                                                    }
                                                    else
                                                    {
                                                        <div class="bg-light rounded me-3 d-flex align-items-center justify-content-center border" style="width: 45px; height: 45px;">
                                                            <i class="bi bi-image text-muted"></i>
                                                        </div>
                                                    }
                                                    <div>
                                                        <div class="fw-bold text-dark">@product.Title</div>
                                                        <div class="text-muted small">@product.ISBN</div>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="py-3">
                                                <span class="fw-bold">@product.Price.ToString("c")</span>
                                            </td>
                                            <td class="py-3">
                                                @if (product.Stock <= 5)
                                                {
                                                    <span class="badge bg-danger rounded-pill px-3">Bajo: @product.Stock</span>
                                                }
                                                else if (product.Stock <= 20)
                                                {
                                                    <span class="badge bg-warning text-dark rounded-pill px-3">Medio: @product.Stock</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-success bg-opacity-10 text-success rounded-pill px-3">Disponible: @product.Stock</span>
                                                }
                                            </td>
                                            <td class="text-end pe-4 py-3">
                                                <a asp-controller="Product" asp-action="Upsert" asp-route-id="@product.Id" 
                                                   class="btn btn-sm btn-light border-0 rounded-circle p-2 hover-primary" title="Editar">
                                                    <i class="bi bi-pencil-fill text-primary"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="4" class="text-center py-5 text-muted">
                                            <i class="bi bi-inbox fs-1 d-block mb-3 opacity-25"></i>
                                            Aún no hay datos de ventas para mostrar.
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Acciones Rápidas -->
        <div class="col-12 col-lg-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white py-3 border-0">
                    <h5 class="mb-0 fw-bold">
                        <i class="bi bi-lightning-charge me-2 text-warning"></i>Accesos Directos
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-3">
                        <a asp-controller="Order" asp-action="Index" class="btn btn-outline-primary border-0 text-start py-3 px-4 rounded-3 bg-light hover-shadow d-flex align-items-center justify-content-between transition">
                            <div class="d-flex align-items-center">
                                <div class="bg-primary bg-opacity-10 p-2 rounded-3 me-3">
                                    <i class="bi bi-receipt fs-4 text-primary"></i>
                                </div>
                                <div>
                                    <div class="fw-bold">Pedidos</div>
                                    <small class="text-muted">Gestión de estados</small>
                                </div>
                            </div>
                            <i class="bi bi-chevron-right text-muted"></i>
                        </a>
                        
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary border-0 text-start py-3 px-4 rounded-3 bg-light hover-shadow d-flex align-items-center justify-content-between transition">
                            <div class="d-flex align-items-center">
                                <div class="bg-secondary bg-opacity-10 p-2 rounded-3 me-3">
                                    <i class="bi bi-box fs-4 text-secondary"></i>
                                </div>
                                <div>
                                    <div class="fw-bold">Inventario</div>
                                    <small class="text-muted">Catálogo de productos</small>
                                </div>
                            </div>
                            <i class="bi bi-chevron-right text-muted"></i>
                        </a>

                        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-success border-0 text-start py-3 px-4 rounded-3 bg-light hover-shadow d-flex align-items-center justify-content-between transition">
                            <div class="d-flex align-items-center">
                                <div class="bg-success bg-opacity-10 p-2 rounded-3 me-3">
                                    <i class="bi bi-tags fs-4 text-success"></i>
                                </div>
                                <div>
                                    <div class="fw-bold">Categorías</div>
                                    <small class="text-muted">Organizar tienda</small>
                                </div>
                            </div>
                            <i class="bi bi-chevron-right text-muted"></i>
                        </a>
                    </div>

                    <div class="mt-5 p-4 bg-light rounded-3 text-center border border-dashed">
                        <i class="bi bi-shield-check fs-2 text-muted mb-3 d-block"></i>
                        <h6 class="fw-bold">Modo Administrador</h6>
                        <p class="small text-muted mb-0">Este panel es privado y solo accesible para usuarios con privilegios elevados.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-shadow:hover {
        transform: translateY(-2px);
        box-shadow: 0 .5rem 1rem rgba(0,0,0,.1) !important;
        background-color: #fff !important;
        border: 1px solid rgba(0,0,0,.05) !important;
    }
    .hover-primary:hover {
        background-color: rgba(13, 110, 253, 0.1) !important;
    }
    .transition {
        transition: all 0.3s ease;
    }
    .border-dashed {
        border-style: dashed !important;
    }
</style>
