@using ElectronicJova.Models
@model PaginatedList<OrderHeader>

@{
    ViewData["Title"] = "Gestión de Pedidos";
}

<div class="container-fluid p-4">

    <!-- Page Header -->
    <div class="d-flex align-items-center justify-content-between mb-4">
        <div>
            <h2 class="fw-bold mb-0" style="color: var(--text-primary);">
                <i class="bi bi-receipt-cutoff me-2" style="color: var(--cyan);"></i>Gestión de Pedidos
            </h2>
            <p class="mb-0 mt-1" style="color: var(--text-muted); font-size: 0.85rem;">
                Administra y da seguimiento a todos los pedidos de la tienda
            </p>
        </div>
        <span class="badge rounded-pill px-3 py-2" style="background: var(--cyan-glow-sm); color: var(--cyan); border: 1px solid var(--border-accent); font-size: 0.8rem;">
            <i class="bi bi-list-check me-1"></i>@(Model?.Count() ?? 0) pedidos
        </span>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="card border-0" style="background: var(--bg-card); border: 1px solid var(--border) !important; border-radius: 14px; overflow: hidden;">
            <div class="table-responsive">
                <table class="table table-bordered align-middle mb-0" style="width:100%">
                    <thead>
                        <tr>
                            <th class="py-3 ps-4">
                                <i class="bi bi-hash me-1" style="color: var(--cyan);"></i># Pedido
                            </th>
                            <th class="py-3">
                                <i class="bi bi-person me-1" style="color: var(--cyan);"></i>Cliente
                            </th>
                            <th class="py-3">
                                <i class="bi bi-telephone me-1" style="color: var(--cyan);"></i>Teléfono
                            </th>
                            <th class="py-3">
                                <i class="bi bi-envelope me-1" style="color: var(--cyan);"></i>Correo
                            </th>
                            <th class="py-3">
                                <i class="bi bi-currency-dollar me-1" style="color: var(--cyan);"></i>Total
                            </th>
                            <th class="py-3">
                                <i class="bi bi-info-circle me-1" style="color: var(--cyan);"></i>Estado
                            </th>
                            <th class="py-3 text-center">Acción</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var orderHeader in Model)
                        {
                            var badgeClass = orderHeader.OrderStatus == "Delivered" ? "bg-success" :
                                             orderHeader.OrderStatus == "Shipped"   ? "bg-info" :
                                             orderHeader.OrderStatus == "Cancelled" ? "bg-danger" : "bg-warning";
                            <tr>
                                <td class="fw-bold ps-4" style="color: var(--cyan);">#@orderHeader.Id</td>
                                <td style="color: var(--text-primary);">@orderHeader.Name</td>
                                <td style="color: var(--text-secondary);">@orderHeader.PhoneNumber</td>
                                <td class="small" style="color: var(--text-secondary);">@orderHeader.Email</td>
                                <td class="fw-bold" style="color: var(--cyan);">@orderHeader.OrderTotal.ToString("c")</td>
                                <td>
                                    <span class="badge rounded-pill @badgeClass px-3 py-2">
                                        @SD.GetOrderStatusLabel(orderHeader.OrderStatus)
                                    </span>
                                </td>
                                <td class="text-center">
                                    <a asp-action="Details" asp-route-orderId="@orderHeader.Id"
                                       class="btn btn-outline-primary btn-sm rounded-pill px-3">
                                        <i class="bi bi-eye me-1"></i>Ver
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="card border-0 text-center py-5" style="background: var(--bg-card); border: 1px solid var(--border) !important; border-radius: 14px;">
            <i class="bi bi-folder-x display-3 mb-3" style="color: var(--text-muted);"></i>
            <p class="lead mb-0" style="color: var(--text-muted);">No se encontraron pedidos.</p>
        </div>
    }

    <!-- Pagination -->
    @if (Model != null && Model.TotalPages > 1)
    {
        <div class="d-flex justify-content-center mt-4">
            <nav aria-label="Paginación">
                <ul class="pagination">
                    @{
                        var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
                        var nextDisabled = !Model.HasNextPage ? "disabled" : "";
                    }
                    <li class="page-item @prevDisabled">
                        <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageIndex - 1)">
                            <i class="bi bi-chevron-left"></i> Anterior
                        </a>
                    </li>
                    <li class="page-item active">
                        <span class="page-link">Página @Model.PageIndex de @Model.TotalPages</span>
                    </li>
                    <li class="page-item @nextDisabled">
                        <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageIndex + 1)">
                            Siguiente <i class="bi bi-chevron-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    }
</div>
