@using ElectronicJova.Models
@model PaginatedList<OrderHeader>

@{
    ViewData["Title"] = "Gestión de Pedidos";
}

<div class="container-fluid p-4">

    @if (TempData["error"] != null)
    {
        <div class="alert alert-danger shadow-sm border-danger border-2 text-dark bg-danger bg-opacity-10 p-4 mb-4 rounded-3 d-flex align-items-center">
            <i class="bi bi-exclamation-octagon-fill fs-3 text-danger me-3"></i>
            <div>
                <h5 class="fw-bold mb-1 text-danger">Error Carga de Pedidos</h5>
                <p class="mb-0"><strong>Detalle Técnico:</strong> @TempData["error"]</p>
                <small class="text-danger mt-1 d-block">Por favor captura esto para el soporte.</small>
            </div>
        </div>
    }

    @if (TempData["info"] != null)
    {
        <div class="alert alert-info shadow-sm border-info border-2 text-dark bg-info bg-opacity-10 p-4 mb-4 rounded-3 d-flex align-items-center">
            <i class="bi bi-info-circle-fill fs-3 text-info me-3"></i>
            <div>
                <h5 class="fw-bold mb-1 text-info">Aviso Diagnóstico</h5>
                <p class="mb-0">@TempData["info"]</p>
            </div>
        </div>
    }

    <!-- Page Header -->
    <div class="d-flex align-items-center justify-content-between mb-4">
        <div>
            <h2 class="fw-bold mb-0 text-light">
                <i class="bi bi-receipt-cutoff me-2 text-info"></i>Gestión de Pedidos
            </h2>
            <p class="mb-0 mt-1 text-muted small">
                Administra y da seguimiento a todos los pedidos de la tienda
            </p>
        </div>
        <span class="badge rounded-pill px-3 py-2 bg-dark border border-secondary text-info">
            <i class="bi bi-list-check me-1"></i>@(Model?.Count() ?? 0) pedidos
        </span>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="card border-0 shadow-sm bg-card overflow-hidden">
            <table class="table table-dark table-hover align-middle mb-0 border-secondary" style="background-color: var(--bg-card) !important;">
                <thead class="bg-dark">
                    <tr>
                        <th class="py-3 ps-4 text-secondary text-uppercase small fw-bold">
                            <i class="bi bi-hash me-1 text-info"></i># Pedido
                        </th>
                        <th class="py-3 text-secondary text-uppercase small fw-bold">
                            <i class="bi bi-person me-1 text-info"></i>Cliente
                        </th>
                        <th class="py-3 text-secondary text-uppercase small fw-bold d-none d-md-table-cell">
                            <i class="bi bi-telephone me-1 text-info"></i>Teléfono
                        </th>
                        <th class="py-3 text-secondary text-uppercase small fw-bold d-none d-xl-table-cell">
                            <i class="bi bi-envelope me-1 text-info"></i>Correo
                        </th>
                        <th class="py-3 text-secondary text-uppercase small fw-bold d-sm-table-cell">
                            <i class="bi bi-currency-dollar me-1 text-info"></i>Total
                        </th>
                        <th class="py-3 text-secondary text-uppercase small fw-bold">
                            <i class="bi bi-info-circle me-1 text-info"></i>Estado
                        </th>
                        <th class="py-3 text-center text-secondary text-uppercase small fw-bold">Acción</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var orderHeader in Model)
                    {
                        var badgeClass = orderHeader.OrderStatus == "Delivered" ? "bg-success" :
                                         orderHeader.OrderStatus == "Shipped"   ? "bg-info" :
                                         orderHeader.OrderStatus == "Cancelled" ? "bg-danger" : "bg-warning text-dark";
                        <tr>
                            <td class="fw-bold ps-4 text-info">#@orderHeader.Id</td>
                            <td class="text-light">
                                <div class="fw-bold">@orderHeader.Name</div>
                                <div class="small text-muted d-xl-none">@orderHeader.Email</div>
                            </td>
                            <td class="text-muted d-none d-lg-table-cell">@orderHeader.PhoneNumber</td>
                            <td class="small text-muted d-none d-xl-table-cell">@orderHeader.Email</td>
                            <td class="fw-bold text-info">@orderHeader.OrderTotal.ToString("c")</td>
                            <td>
                                <span class="badge rounded-pill @badgeClass px-3 py-2">
                                    @SD.GetOrderStatusLabel(orderHeader.OrderStatus)
                                </span>
                            </td>
                            <td class="text-center">
                                <a asp-action="Details" asp-route-orderId="@orderHeader.Id"
                                   class="btn btn-outline-info btn-sm rounded-pill px-3">
                                    <i class="bi bi-eye"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="card border-secondary bg-card text-center py-5">
            <i class="bi bi-folder-x display-3 mb-3 text-muted"></i>
            <p class="lead mb-0 text-muted">No se encontraron pedidos.</p>
        </div>
    }

    <!-- Pagination -->
    @if (Model != null && Model.TotalPages > 1)
    {
        <div class="d-flex justify-content-center mt-4">
            <nav aria-label="Paginación">
                <ul class="pagination">
                    @{
                        var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
                        var nextDisabled = !Model.HasNextPage ? "disabled" : "";
                    }
                    <li class="page-item @prevDisabled">
                        <a class="page-link bg-dark border-secondary text-secondary" asp-action="Index" asp-route-pageNumber="@(Model.PageIndex - 1)">
                            <i class="bi bi-chevron-left"></i> Anterior
                        </a>
                    </li>
                    <li class="page-item active">
                        <span class="page-link bg-info border-info text-dark fw-bold">Página @Model.PageIndex de @Model.TotalPages</span>
                    </li>
                    <li class="page-item @nextDisabled">
                        <a class="page-link bg-dark border-secondary text-secondary" asp-action="Index" asp-route-pageNumber="@(Model.PageIndex + 1)">
                            Siguiente <i class="bi bi-chevron-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    }
</div>
