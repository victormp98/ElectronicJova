@using ElectronicJova.Models
@model PaginatedList<OrderHeader>

@{
    ViewData["Title"] = "Manage Orders";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Manage Orders</h2>
        </div>
    </div>
    <br />

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive shadow-sm rounded">
            <table class="table table-bordered table-striped align-middle mb-0" style="width:100%">
                <thead class="bg-primary text-white">
                    <tr>
                        <th class="py-3">Order ID</th>
                        <th class="py-3">Name</th>
                        <th class="py-3">Phone</th>
                        <th class="py-3">Email</th>
                        <th class="py-3">Amount</th>
                        <th class="py-3">Status</th>
                        <th class="py-3 text-center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var orderHeader in Model)
                    {
                        <tr>
                            <td class="fw-bold">@orderHeader.Id</td>
                            <td>@orderHeader.Name</td>
                            <td>@orderHeader.PhoneNumber</td>
                            <td class="small">@orderHeader.Email</td>
                            <td class="fw-bold text-primary">@orderHeader.OrderTotal.ToString("c")</td>
                            <td>
                                <span class="badge rounded-pill bg-info text-dark" data-bs-toggle="tooltip" title="Estado actual del procesamiento del pedido">
                                    <i class="bi bi-info-circle me-1"></i>@orderHeader.OrderStatus
                                </span>
                            </td>
                            <td class="text-center">
                                <a asp-action="Details" asp-route-orderId="@orderHeader.Id" class="btn btn-primary btn-sm rounded-pill px-3 shadow-sm">
                                    <i class="bi bi-eye me-1"></i>Ver Detalles
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="row pt-3">
            <div class="col-12 text-center text-muted py-5">
                <i class="bi bi-folder-x display-4 mb-3 d-block"></i>
                <p class="lead">No se encontraron pedidos.</p>
            </div>
        </div>
    }

    <!-- Pagination Controls -->
    @if (Model.TotalPages > 1)
    {
        <div class="d-flex justify-content-center mt-4">
            <nav aria-label="Page navigation">
                <ul class="pagination">
                    @{
                        var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
                        var nextDisabled = !Model.HasNextPage ? "disabled" : "";
                    }
                    
                    <li class="page-item @prevDisabled">
                        <a class="page-link shadow-sm" asp-action="Index"
                           asp-route-pageNumber="@(Model.PageIndex - 1)"
                           aria-label="Previous">
                            <i class="bi bi-chevron-left"></i> Anterior
                        </a>
                    </li>

                    <li class="page-item active" aria-current="page">
                        <span class="page-link">PÃ¡gina @Model.PageIndex de @Model.TotalPages</span>
                    </li>

                    <li class="page-item @nextDisabled">
                        <a class="page-link shadow-sm" asp-action="Index"
                           asp-route-pageNumber="@(Model.PageIndex + 1)"
                           aria-label="Next">
                            Siguiente <i class="bi bi-chevron-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    }
</div>
