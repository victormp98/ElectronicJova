@model IEnumerable<Product>

@{
    ViewData["Title"] = "Products";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Product
            </a>
        </div>
    </div>
    <br /><br />

    <div class="card border-0 shadow-sm overflow-hidden" style="background: var(--bg-card); border: 1px solid var(--border) !important;">
        <div class="card-body p-0">
            <table id="tblData" class="table table-dark table-hover align-middle mb-0" style="width:100%">
                <thead style="background: var(--bg-surface);">
                    <tr>
                        <th class="py-3 ps-4 text-secondary text-uppercase small fw-bold">Title</th>
                        <th class="py-3 text-secondary text-uppercase small fw-bold">ISBN</th>
                        <th class="py-3 text-secondary text-uppercase small fw-bold">List Price</th>
                        <th class="py-3 text-secondary text-uppercase small fw-bold">Author</th>
                        <th class="py-3 text-secondary text-uppercase small fw-bold">Category</th>
                        <th class="text-end py-3 pe-4"></th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/product.js"></script>
}
