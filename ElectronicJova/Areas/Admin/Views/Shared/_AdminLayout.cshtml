@using ElectronicJova.Utilities

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ElectronicJova Admin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ElectronicJova.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.datatables.net/2.0.8/css/dataTables.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.10.6/dist/sweetalert2.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <link rel="stylesheet" href="~/css/_AdminLayout.css" asp-append-version="true" />
</head>
<body>
    <div class="d-flex min-vh-100">

        <!-- ── Sidebar Desktop ─────────────────────────────────── -->
        <div class="d-none d-lg-flex flex-column flex-shrink-0 sidebar-nav" style="width: 260px;">

            <!-- Brand -->
            <a href="/" class="sidebar-brand">
                <i class="bi bi-lightning-charge-fill brand-icon"></i>
                <span class="brand-text">Jova Admin</span>
            </a>

            <!-- Navegación -->
            <p class="sidebar-section-label">Menú Principal</p>
            <ul class="nav nav-pills flex-column mb-auto px-1">
                <li class="nav-item">
                    <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index"
                       class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Dashboard" ? "active" : "")">
                        <i class="bi bi-grid-1x2-fill"></i> Dashboard
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-area="Admin" asp-controller="Category" asp-action="Index"
                       class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Category" ? "active" : "")">
                        <i class="bi bi-tags-fill"></i> Categorías
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-area="Admin" asp-controller="Product" asp-action="Index"
                       class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Product" ? "active" : "")">
                        <i class="bi bi-box-seam-fill"></i> Productos
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-area="Admin" asp-controller="Order" asp-action="Index"
                       class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Order" ? "active" : "")">
                        <i class="bi bi-receipt-cutoff"></i> Pedidos
                    </a>
                </li>
            </ul>

            <!-- User footer -->
            <div class="sidebar-footer">
                <div class="dropdown">
                    <a href="#" class="dropdown-toggle" id="dropdownUser" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-person-circle"></i>
                        <span>Admin</span>
                    </a>
                    <ul class="dropdown-menu shadow border-0 mb-2" aria-labelledby="dropdownUser" style="bottom: 100%; top: auto;">
                        <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Index"><i class="bi bi-shop me-2 text-cyan"></i>Ir a la Tienda</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><partial name="_LoginPartial" /></li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- ── Main Content ────────────────────────────────────── -->
        <div class="flex-grow-1 main-content">

            <!-- Mobile Header -->
            <header class="d-lg-none admin-mobile-header sticky-top">
                <div class="d-flex justify-content-between align-items-center">
                    <a href="/" class="text-decoration-none d-flex align-items-center gap-2">
                        <i class="bi bi-lightning-charge-fill" style="color: #00D4FF; filter: drop-shadow(0 0 6px rgba(0,212,255,0.5));"></i>
                        <span class="brand-text">Jova Admin</span>
                    </a>
                    <button class="btn btn-outline-primary btn-sm" type="button" data-bs-toggle="offcanvas" data-bs-target="#adminMobileSidebar">
                        <i class="bi bi-list"></i>
                    </button>
                </div>
            </header>

            <main role="main" class="p-4">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- ── Mobile Sidebar (Offcanvas) ─────────────────────────── -->
    <div class="offcanvas offcanvas-start" tabindex="-1" id="adminMobileSidebar" style="width: 260px;">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title">
                <i class="bi bi-lightning-charge-fill me-2" style="color: #00D4FF;"></i>Jova Panel Admin
            </h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
        </div>
        <div class="offcanvas-body p-0">
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="nav-link">
                        <i class="bi bi-grid-1x2-fill"></i> Dashboard
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-area="Admin" asp-controller="Category" asp-action="Index" class="nav-link">
                        <i class="bi bi-tags-fill"></i> Categorías
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-area="Admin" asp-controller="Product" asp-action="Index" class="nav-link">
                        <i class="bi bi-box-seam-fill"></i> Productos
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-area="Admin" asp-controller="Order" asp-action="Index" class="nav-link">
                        <i class="bi bi-receipt-cutoff"></i> Pedidos
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/2.0.8/js/dataTables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.10.6/dist/sweetalert2.all.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <partial name="_Notification" />
</body>
</html>
