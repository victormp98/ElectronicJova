@model IEnumerable<Category>

@{
    ViewData["Title"] = "Categories";
}

<div class="container-fluid p-4"> Riverside:iv class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Category
            </a>
        </div>
    </div>
    <br /><br />

    <div class="card border-0 shadow-sm overflow-hidden" style="background: var(--bg-card); border: 1px solid var(--border) !important;">
        <div class="card-body p-0">
            <table class="table table-dark table-hover align-middle mb-0" style="width:100%">
                <thead style="background: var(--bg-surface);">
                    <tr>
                        <th class="py-3 ps-4 text-secondary text-uppercase small fw-bold">Category Name</th>
                        <th class="py-3 text-secondary text-uppercase small fw-bold">Display Order</th>
                        <th class="text-end py-3 pe-4">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var obj in Model)
                    {
                        <tr>
                            <td class="ps-4 fw-semibold text-light">@obj.Name</td>
                            <td class="text-info">@obj.DisplayOrder</td>
                            <td class="text-end pe-4">
                                <div class="btn-group" role="group">
                                    <a asp-controller="Category" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-sm btn-outline-info mx-1 rounded">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-sm btn-outline-danger mx-1 rounded">
                                        <i class="bi bi-trash-fill"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
