@model IEnumerable<Category>

@{
    ViewData["Title"] = "Categorías";
}

<div class="container-fluid p-4">
    <!-- Page Header -->
    <div class="d-flex align-items-center justify-content-between mb-4">
        <div>
            <h2 class="fw-bold mb-0 text-light">
                <i class="bi bi-tags-fill me-2 text-info"></i>Gestión de Categorías
            </h2>
            <p class="mb-0 mt-1 text-muted small">
                Organiza los productos de la tienda por categorías
            </p>
        </div>
        <a asp-controller="Category" asp-action="Upsert" class="btn btn-info rounded-pill px-4">
            <i class="bi bi-plus-circle me-1"></i> Nueva Categoría
        </a>
    </div>

    <div class="card border-secondary bg-card shadow-sm overflow-hidden table-responsive-stack">
        <div class="card-body p-0">
            <table class="table table-dark table-hover align-middle mb-0 bg-transparent">
                <thead>
                    <tr class="text-secondary small text-uppercase fw-bold">
                        <th class="py-3 ps-4">Nombre de Categoría</th>
                        <th class="py-3">Orden de Visualización</th>
                        <th class="text-end py-3 pe-4">Acciones</th>
                    </tr>
                </thead>
                <tbody class="border-top border-secondary">
                    @foreach(var obj in Model)
                    {
                        <tr>
                            <td class="ps-4 fw-semibold text-light" data-label="Nombre">@obj.Name</td>
                            <td class="text-info" data-label="Orden">@obj.DisplayOrder</td>
                            <td class="text-end pe-4" data-label="Acciones">
                                <div class="btn-group" role="group">
                                    <a asp-controller="Category" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-sm btn-outline-info mx-1 rounded-circle p-2" title="Editar">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-sm btn-outline-danger mx-1 rounded-circle p-2" title="Eliminar">
                                        <i class="bi bi-trash-fill"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
