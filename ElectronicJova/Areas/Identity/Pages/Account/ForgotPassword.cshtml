@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "¿Olvidaste tu contraseña?";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Recuperar Contraseña - ElectronicJova</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <style>
        body {
            min-height: 100vh;
            background: var(--bg-base);
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Inter', sans-serif;
            color: var(--text-primary);
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card border-secondary bg-card shadow-lg">
                    <div class="card-body p-4 p-md-5">
                        <div class="text-center mb-4">
                            <div class="d-inline-flex align-items-center justify-content-center rounded-circle mb-3"
                                 style="width: 60px; height: 60px; background: rgba(255,193,7,0.1); border: 1px solid rgba(255,193,7,0.3);">
                                <i class="bi bi-key-fill fs-3 text-warning"></i>
                            </div>
                            <h3 class="fw-bold text-light">Recuperar Acceso</h3>
                            <p class="text-muted small">Ingresa tu correo electrónico para buscar tu cuenta.</p>
                        </div>

                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger py-2 small mb-3" role="alert"></div>
                            
                            <div class="form-floating mb-3">
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="nombre@ejemplo.com" />
                                <label asp-for="Input.Email" class="text-secondary">Correo Electrónico</label>
                                <span asp-validation-for="Input.Email" class="text-danger small"></span>
                            </div>

                            <button type="submit" class="btn btn-primary w-100 py-2 fw-bold shadow-info mb-3">
                                <i class="bi bi-send me-2"></i>Enviar Enlace
                            </button>
                            
                            <div class="text-center">
                                <a asp-page="./Login" class="text-decoration-none text-muted small">
                                    <i class="bi bi-arrow-left me-1"></i>Volver al Login
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
