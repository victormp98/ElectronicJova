@page
@model RegisterModel
@{
    ViewData["Title"] = "Registrarse";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] — ElectronicJova</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <style>
        body {
            min-height: 100vh;
            background: var(--bg-base);
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Inter', sans-serif;
            overflow-x: hidden;
            padding: 20px;
        }

        /* Ambient glow blobs */
        .login-blob-1 {
            position: fixed;
            top: -15%;
            left: -10%;
            width: 500px;
            height: 500px;
            background: radial-gradient(circle, rgba(0,212,255,0.07) 0%, transparent 70%);
            pointer-events: none;
            z-index: 0;
        }
        .login-blob-2 {
            position: fixed;
            bottom: -10%;
            right: -5%;
            width: 450px;
            height: 450px;
            background: radial-gradient(circle, rgba(91,141,239,0.06) 0%, transparent 70%);
            pointer-events: none;
            z-index: 0;
        }

        .login-card {
            position: relative;
            z-index: 1;
            width: 100%;
            max-width: 500px; /* Slightly wider for register */
            background: var(--bg-card);
            border: 1px solid var(--border);
            border-radius: 20px;
            padding: 1.5rem 2rem;
            box-shadow: 0 24px 64px rgba(0,0,0,0.5), 0 0 0 1px rgba(0,212,255,0.05);
            animation: fadeInUp 0.45s ease both;
        }

        .login-logo {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.6rem;
            margin-bottom: 0.5rem;
        }

        .login-logo .logo-icon {
            width: 44px;
            height: 44px;
            background: linear-gradient(135deg, var(--cyan), #5B8DEF);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.3rem;
            color: #0A0E1A;
            box-shadow: 0 0 20px var(--cyan-glow);
        }

        .login-logo .logo-text {
            font-size: 1.3rem;
            font-weight: 800;
            letter-spacing: -0.5px;
            background: linear-gradient(135deg, var(--cyan), #5B8DEF);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .login-subtitle {
            text-align: center;
            color: var(--text-muted);
            font-size: 0.875rem;
            margin-bottom: 1rem;
        }

        /* Input with icon */
        .input-icon-group {
            position: relative;
            margin-bottom: 0.8rem;
        }

        .input-icon-group .input-icon {
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: var(--text-muted);
            font-size: 1rem;
            pointer-events: none;
            transition: color 0.2s ease;
            z-index: 5;
        }

        .input-icon-group input {
            padding-left: 2.75rem;
            height: 42px;
            font-size: 0.9rem;
        }

        .input-icon-group input:focus + .input-icon,
        .input-icon-group input:focus ~ .input-icon {
            color: var(--cyan);
        }

        /* Password toggle */
        .input-icon-group .toggle-password {
            position: absolute;
            right: 1rem;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            color: var(--text-muted);
            cursor: pointer;
            padding: 0;
            font-size: 1rem;
            transition: color 0.2s ease;
            z-index: 5;
        }
        .input-icon-group .toggle-password:hover { color: var(--cyan); }

        .login-link {
            color: var(--cyan);
            text-decoration: none;
            font-size: 0.875rem;
            transition: color 0.2s ease;
        }
        .login-link:hover {
            color: var(--cyan-dark);
            text-decoration: underline;
        }

        .login-divider {
            display: flex;
            align-items: center;
            gap: 1rem;
            margin: 1.5rem 0;
            color: var(--text-muted);
            font-size: 0.8rem;
        }
        .login-divider::before, .login-divider::after {
            content: ''; flex: 1; height: 1px; background: var(--border);
        }

        @@keyframes fadeInUp {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }
    </style>
</head>
<body>
    <div class="login-blob-1"></div>
    <div class="login-blob-2"></div>

    <div class="login-card">
        <!-- Logo -->
        <div class="login-logo">
            <div class="logo-icon">
                <i class="bi bi-person-plus-fill"></i>
            </div>
            <span class="logo-text">ElectronicJova</span>
        </div>
        <p class="login-subtitle mb-4">Únete a nuestra comunidad tecnológica</p>

        <div asp-validation-summary="ModelOnly" class="alert alert-danger py-2 small mb-3" role="alert" style="display: none;"></div>

        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <!-- Name -->
            <div class="mb-2">
                <label asp-for="Input.Name" class="form-label ms-1 small text-muted text-uppercase fw-bold" style="letter-spacing: 0.5px;">Nombre Completo</label>
                <div class="input-icon-group mb-1">
                    <i class="bi bi-person input-icon"></i>
                    <input asp-for="Input.Name" class="form-control" aria-required="true" placeholder="Ej. Juan Pérez" />
                </div>
                <span asp-validation-for="Input.Name" class="text-danger small d-block"></span>
            </div>

            <!-- Email -->
            <div class="mb-2">
                <label asp-for="Input.Email" class="form-label ms-1 small text-muted text-uppercase fw-bold" style="letter-spacing: 0.5px;">Correo Electrónico</label>
                <div class="input-icon-group mb-1">
                    <i class="bi bi-envelope input-icon"></i>
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="nombre@ejemplo.com" />
                </div>
                <span asp-validation-for="Input.Email" class="text-danger small d-block"></span>
            </div>

            <!-- Password -->
            <div class="mb-2">
                <label asp-for="Input.Password" class="form-label ms-1 small text-muted text-uppercase fw-bold" style="letter-spacing: 0.5px;">Contraseña</label>
                <div class="input-icon-group mb-1">
                    <i class="bi bi-lock input-icon"></i>
                    <input asp-for="Input.Password" class="form-control" id="passwordInput" autocomplete="new-password" aria-required="true" placeholder="Mínimo 6 caracteres" />
                    <button type="button" class="toggle-password" onclick="togglePassword('passwordInput', 'toggleIcon1')" title="Mostrar/ocultar">
                        <i class="bi bi-eye" id="toggleIcon1"></i>
                    </button>
                </div>
                <span asp-validation-for="Input.Password" class="text-danger small d-block"></span>
            </div>

            <!-- Confirm Password -->
            <div class="mb-3">
                <label asp-for="Input.ConfirmPassword" class="form-label ms-1 small text-muted text-uppercase fw-bold" style="letter-spacing: 0.5px;">Confirmar Contraseña</label>
                <div class="input-icon-group mb-1">
                    <i class="bi bi-lock-fill input-icon"></i>
                    <input asp-for="Input.ConfirmPassword" class="form-control" id="confirmPasswordInput" autocomplete="new-password" aria-required="true" placeholder="Repite tu contraseña" />
                    <button type="button" class="toggle-password" onclick="togglePassword('confirmPasswordInput', 'toggleIcon2')" title="Mostrar/ocultar">
                        <i class="bi bi-eye" id="toggleIcon2"></i>
                    </button>
                </div>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger small d-block"></span>
            </div>

            <button id="registerSubmit" type="submit" class="btn btn-primary w-100 py-2 fw-bold mb-3 shadow-info">
                <i class="bi bi-rocket-takeoff me-2"></i>Crear Cuenta
            </button>

            <div class="d-flex gap-2">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary w-50 py-2 fw-semibold" style="font-size: 0.9rem;">
                    <i class="bi bi-house me-2"></i>Inicio
                </a>
                <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl"
                   class="btn btn-outline-primary w-50 py-2 fw-semibold" style="font-size: 0.9rem;">
                    <i class="bi bi-box-arrow-in-right me-2"></i>Login
                </a>
            </div>

            <!-- External Logins -->
            @{
                if ((Model.ExternalLogins?.Count ?? 0) > 0)
                {
                    <div class="login-divider mt-4">registrarse con</div>
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        @foreach (var provider in Model.ExternalLogins!)
                        {
                            <button type="submit" class="btn btn-outline-secondary w-100 mb-2" name="provider" value="@provider.Name">
                                @provider.DisplayName
                            </button>
                        }
                    </form>
                }
            }
        </form>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script>
        function togglePassword(inputId, iconId) {
            const input = document.getElementById(inputId);
            const icon = document.getElementById(iconId);
            if (input.type === 'password') {
                input.type = 'text';
                icon.className = 'bi bi-eye-slash';
            } else {
                input.type = 'password';
                icon.className = 'bi bi-eye';
            }
        }

        $(document).ready(function() {
            const passwordInput = $('#passwordInput');
            const emailInput = $('input[asp-for="Input.Email"]');
            
            // Password Strength
            passwordInput.on('input', function() {
                const val = $(this).val();
                let score = 0;
                if (val.length >= 6) score++;
                if (/[A-Z]/.test(val)) score++;
                if (/[0-9]/.test(val)) score++;
                if (/[^A-Za-z0-9]/.test(val)) score++;

                const colors = ['#FF4757', '#FFA502', '#2ED573', '#1E90FF'];
                const strength = score > 0 ? colors[score-1] : 'var(--border)';
                $(this).css('border-color', strength);
                $(this).css('box-shadow', `0 0 10px ${strength}22`);
            });

            // Email format check
            emailInput.on('input', function() {
                const val = $(this).val();
                const isValid = /^[^\s@@]+@@[^\s@@]+\.[^\s@@]+$/.test(val);
                if (val.length > 0) {
                    $(this).css('border-color', isValid ? 'var(--success)' : 'var(--danger)');
                } else {
                    $(this).css('border-color', 'var(--border)');
                }
            });
        });
    </script>
</body>
</html>
