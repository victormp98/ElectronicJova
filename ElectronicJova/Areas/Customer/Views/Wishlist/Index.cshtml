@model IEnumerable<ElectronicJova.Models.Wishlist>

@{
    ViewData["Title"] = "Mis Favoritos";
}

<div class="container py-5">

    <!-- ── Header ───────────────────────────────────────── -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold mb-0 text-light">
            <i class="bi bi-heart-fill me-2 text-danger"></i>
            Mis <span style="color: var(--cyan);">Favoritos</span>
        </h2>
        <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary rounded-pill">
            <i class="bi bi-arrow-left me-1"></i>Seguir comprando
        </a>
    </div>

    @if (!Model.Any())
    {
        <!-- ── Empty State ───────────────────────────────── -->
        <div class="card border-secondary bg-card shadow-sm text-center py-5">
            <div class="card-body">
                <i class="bi bi-heart display-1 text-muted opacity-25 mb-4 d-block"></i>
                <h4 class="text-muted">Aún no tienes productos en favoritos</h4>
                <p class="text-muted mb-4">¡Explora nuestra tienda y guarda lo que más te guste!</p>
                <a asp-area="" asp-controller="Home" asp-action="Index"
                   class="btn btn-primary rounded-pill px-4 btn-lg shadow-primary">
                    <i class="bi bi-shop me-2"></i>Ir a la tienda
                </a>
            </div>
        </div>
    }
    else
    {
        <!-- ── Wishlist Grid ──────────────────────────────── -->
        <div class="row g-4" id="wishlist-container">
            @foreach (var item in Model)
            {
                <div class="col-12 col-md-6 col-lg-4 col-xl-3 wishlist-item" data-id="@item.Id">
                    <div class="card h-100 border-secondary bg-card shadow-sm product-card">
                        <!-- Image -->
                        <div class="position-relative overflow-hidden" style="border-radius: 0.5rem 0.5rem 0 0;">
                            <img src="@ImageUrlHelper.GetDisplayUrl(item.Product!.ImageUrl, "https://via.placeholder.com/300x400?text=No+Image")"
                                 class="card-img-top" alt="@item.Product!.Title"
                                 style="height: 220px; object-fit: cover; transition: transform 0.4s ease;" />

                            <!-- Stock Badges -->
                            @if (item.Product.Stock <= 0)
                            {
                                <span class="badge bg-danger position-absolute top-0 start-0 m-2">Agotado</span>
                            }
                            else if (item.Product.Stock < 5)
                            {
                                <span class="badge bg-warning text-dark position-absolute top-0 start-0 m-2">¡Últimas unidades!</span>
                            }

                            <!-- Discount Badge -->
                            @if (item.Product.ListPrice > item.Product.Price)
                            {
                                <span class="badge position-absolute top-0 end-0 m-2"
                                      style="background: var(--cyan); color: #0A0E1A; font-weight: 700;">
                                    -@(Math.Round((1 - (double)item.Product.Price / (double)item.Product.ListPrice) * 100))% OFF
                                </span>
                            }
                        </div>

                        <!-- Body -->
                        <div class="card-body">
                            <h6 class="card-title fw-semibold mb-2 text-light">
                                @item.Product.Title
                            </h6>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="fw-bold fs-5" style="color: var(--cyan);">
                                    @item.Product.Price.ToString("c")
                                </span>
                                @if (item.Product.Stock > 0)
                                {
                                    <small class="text-success"><i class="bi bi-check2-circle me-1"></i>En stock</small>
                                }
                                else
                                {
                                    <small class="text-danger"><i class="bi bi-x-circle me-1"></i>Agotado</small>
                                }
                            </div>
                        </div>

                        <!-- Footer -->
                        <div class="card-footer border-0 pb-3" style="background: transparent;">
                            <div class="d-grid gap-2">
                                <a asp-area="" asp-controller="Home" asp-action="Details"
                                   asp-route-id="@item.ProductId"
                                   class="btn btn-primary rounded-pill">
                                    <i class="bi bi-eye me-1"></i>Ver Detalles
                                </a>
                                <button class="btn btn-outline-danger rounded-pill remove-favorite" data-id="@item.Id">
                                    <i class="bi bi-trash-fill me-1"></i>Eliminar
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            const removeUrl = '@Url.Action("Remove", "Wishlist", new { area = "Customer" })';
            // Card hover effect
            $('.product-card').hover(
                function () { $(this).css({ 'transform': 'translateY(-6px)', 'box-shadow': '0 12px 30px rgba(0,212,255,0.15)' }); },
                function () { $(this).css({ 'transform': 'translateY(0)', 'box-shadow': '' }); }
            );

            $('.remove-favorite').click(function () {
                const btn = $(this);
                const id = btn.data('id');

                Swal.fire({
                    title: '¿Eliminar de favoritos?',
                    text: "Podrás volver a agregarlo desde la página del producto.",
                    icon: 'warning',
                    background: '#111827',
                    color: '#e2e8f0',
                    showCancelButton: true,
                    confirmButtonColor: '#dc3545',
                    cancelButtonColor: '#374151',
                    confirmButtonText: 'Sí, eliminar',
                    cancelButtonText: 'Cancelar'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.post(removeUrl, { id: id }, function (response) {
                            if (response.success) {
                                btn.closest('.wishlist-item').fadeOut(300, function () {
                                    $(this).remove();
                                    if ($('.wishlist-item').length === 0) {
                                        location.reload();
                                    }
                                });
                                toastr.success('Eliminado de favoritos');
                            } else {
                                toastr.error(response.message || 'Error al eliminar');
                            }
                        }).fail(function () {
                            toastr.error('Error de conexión');
                        });
                    }
                });
            });
        });
    </script>
}
