@using ElectronicJova.Models.ViewModels
@model CartVM

<form method="post">
    <br />
    <div class="card shadow border-0">
        <div class="card-header bg-primary bg-gradient text-light ml-0 py-4">
            <div class="row">
                <div class="col-12 text-center">
                    <h3 class="text-white">Shopping Cart</h3>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="container rounded p-2">
                <div class="row">
                    <div class="col-12 col-lg-6 offset-lg-3">
                        <partial name="_Notification" />
                    </div>
                </div>
                @if (Model.ShoppingCartList.Count() > 0)
                {
                    @foreach (var item in Model.ShoppingCartList)
                    {
                        <div class="row px-2 pb-3 pt-3">
                            <div class="col-md-3 text-center">
                                <img src="@item.Product.ImageUrl" class="rounded" width="100%" />
                            </div>
                            <div class="col-md-9">
                                <div class="row">
                                    <div class="col-md-6">
                                        <p class="card-title text-primary h5">@item.Product.Title</p>
                                        <p class="card-text text-secondary">@item.Product.Author</p>
                                        
                                        @if (!string.IsNullOrEmpty(item.SelectedOptions))
                                        {
                                            var opts = System.Text.Json.JsonSerializer.Deserialize<List<dynamic>>(item.SelectedOptions);
                                            <div class="mt-2">
                                                @foreach (var opt in opts)
                                                {
                                                    <span class="badge bg-info text-dark me-1 mb-1">
                                                        <i class="bi bi-gear-fill me-1"></i>@opt.GetProperty("Name"): @opt.GetProperty("Value")
                                                    </span>
                                                }
                                            </div>
                                        }

                                        @if (!string.IsNullOrEmpty(item.SpecialNotes))
                                        {
                                            <div class="mt-2 p-2 bg-light rounded border-start border-warning border-3">
                                                <small class="text-muted d-block fw-bold">Notas Especiales:</small>
                                                <small class="text-dark">@item.SpecialNotes</small>
                                            </div>
                                        }
                                    </div>
                                    <div class="col-md-3">
                                        <p class="text-primary fw-bold">@item.Price.ToString("c")</p>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="input-group mb-3">
                                            <a asp-action="Minus" asp-route-cartId="@item.Id" class="btn btn-outline-primary py-2 px-3 border">
                                                <i class="bi bi-dash-lg"></i>
                                            </a>
                                            <input type="text" class="form-control text-center" value="@item.Count" readonly />
                                            <a asp-action="Plus" asp-route-cartId="@item.Id" class="btn btn-outline-primary py-2 px-3 border">
                                                <i class="bi bi-plus-lg"></i>
                                            </a>
                                        </div>
                                        <a asp-action="Remove" asp-route-cartId="@item.Id" class="btn btn-danger form-control py-2 px-3">
                                            <i class="bi bi-trash-fill"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <hr />
                    }
                    <div class="row">
                        <div class="col-md-9 text-end">
                            <p class="text-primary h4">Total:</p>
                        </div>
                        <div class="col-md-3 text-start">
                            <p class="text-primary h4">@Model.OrderHeader.OrderTotal.ToString("c")</p>
                        </div>
                    </div>
                }
                else
                {
                    <div class="row pt-3">
                        <div class="col-12 text-center">
                            <p class="lead">Your shopping cart is empty.</p>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Continue Shopping</a>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-12 col-md-6 pb-1">
                    <a asp-action="Index" asp-controller="Home" class="btn btn-secondary form-control">Continue Shopping</a>
                </div>
                <div class="col-12 col-md-6 pb-1">
                    <button type="submit" asp-action="Summary" asp-area="Customer" class="btn btn-primary form-control">Proceed to Checkout</button>
                </div>
            </div>
        </div>
    </div>
</form>
