@using ElectronicJova.Models.ViewModels
@model CartVM

<form method="post">
    <br />
    <div class="card shadow border-0">
        <div class="card-header bg-primary bg-gradient text-light ml-0 py-4">
            <div class="row">
                <div class="col-12 text-center">
                    <h3 class="text-white">Shopping Cart</h3>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="container rounded p-2">
                <div class="row">
                    <div class="col-12 col-lg-6 offset-lg-3">
                        <partial name="_Notification" />
                    </div>
                </div>
                @if (Model.ShoppingCartList.Count() > 0)
                {
                    @foreach (var item in Model.ShoppingCartList)
                    {
                        <div class="row px-2 pb-4 pt-4 border-bottom align-items-center">
                            <div class="col-4 col-md-2 text-center mb-3 mb-md-0">
                                <img src="@item.Product!.ImageUrl" class="rounded shadow-sm" width="100%" />
                            </div>
                            <div class="col-8 col-md-10">
                                <div class="row align-items-center">
                                    <div class="col-12 col-md-6 mb-2 mb-md-0">
                                        <h5 class="text-primary mb-1">@item.Product!.Title</h5>
                                        <p class="text-secondary small mb-2">by @item.Product!.Author</p>
                                        
                                        @if (!string.IsNullOrEmpty(item.SelectedOptions))
                                        {
                                            var opts = System.Text.Json.JsonSerializer.Deserialize<List<dynamic>>(item.SelectedOptions);
                                            <div class="mb-2">
                                                @foreach (var opt in opts)
                                                {
                                                    <span class="badge bg-info text-dark me-1 mb-1 shadow-sm" style="font-size: 0.7rem;">
                                                        <i class="bi bi-gear-fill me-1"></i>@opt.GetProperty("Name"): @opt.GetProperty("Value")
                                                    </span>
                                                }
                                            </div>
                                        }

                                        @if (!string.IsNullOrEmpty(item.SpecialNotes))
                                        {
                                            <div class="mt-2 p-2 bg-light rounded border-start border-warning border-3 shadow-sm">
                                                <small class="text-muted d-block fw-bold" style="font-size: 0.7rem;">NOTAS:</small>
                                                <small class="text-dark" style="font-size: 0.8rem;">@item.SpecialNotes</small>
                                            </div>
                                        }
                                    </div>
                                    <div class="col-6 col-md-3 text-md-center">
                                        <h5 class="fw-bold text-primary mb-0">@item.Price.ToString("c") <span class="text-muted small fw-normal">/ unit</span></h5>
                                    </div>
                                    <div class="col-6 col-md-3 text-end">
                                        <div class="d-flex align-items-center justify-content-end mb-2">
                                            <a asp-action="Minus" asp-route-cartId="@item.Id" class="btn btn-outline-primary py-2 px-3 border shadow-sm">
                                                <i class="bi bi-dash-lg"></i>
                                            </a>
                                            <span class="mx-3 fw-bold h5 mb-0">@item.Count</span>
                                            <a asp-action="Plus" asp-route-cartId="@item.Id" class="btn btn-outline-primary py-2 px-3 border shadow-sm">
                                                <i class="bi bi-plus-lg"></i>
                                            </a>
                                        </div>
                                        <a asp-action="Remove" asp-route-cartId="@item.Id" class="btn btn-link text-danger p-0" style="text-decoration: none;">
                                            <i class="bi bi-trash3 me-1"></i>Remove
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    <div class="row">
                        <div class="col-md-9 text-end">
                            <p class="text-primary h4">Total:</p>
                        </div>
                        <div class="col-md-3 text-start">
                            <p class="text-primary h4">@Model.OrderHeader!.OrderTotal.ToString("c")</p>
                        </div>
                    </div>
                }
                else
                {
                    <div class="row pt-3">
                        <div class="col-12 text-center">
                            <p class="lead">Your shopping cart is empty.</p>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Continue Shopping</a>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="card-footer bg-white border-0 py-3">
            <div class="row">
                <div class="col-12 col-md-6 mb-2 mb-md-0">
                    <a asp-action="Index" asp-controller="Home" class="btn btn-outline-secondary btn-lg w-100 rounded-pill py-3">Continue Shopping</a>
                </div>
                <div class="col-12 col-md-6">
                    <button type="submit" asp-action="Summary" asp-area="Customer" class="btn btn-primary btn-lg w-100 rounded-pill py-3 shadow">Proceed to Checkout</button>
                </div>
            </div>
        </div>
    </div>
</form>
