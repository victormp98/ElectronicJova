@using ElectronicJova.Models.ViewModels
@model CartVM

@{
    ViewData["Title"] = "Resumen del pedido";
}

<form method="post" asp-action="Summary">
    <div class="container py-5">
        <div class="card border-0 shadow-lg overflow-hidden">
            <div class="card-header py-4 bg-gradient-dark-blue border-bottom-0">
                <div class="row">
                    <div class="col-12 text-center">
                        <h3 class="fw-bold mb-0 text-light">
                            <i class="bi bi-bag-check-fill me-2 text-info"></i>Resumen del pedido
                        </h3>
                    </div>
                </div>
            </div>
            
            <div class="card-body p-4 bg-card">
                <div class="container rounded">
                    <div class="row">
                        <!-- ── Shipping Details ────────────────────── -->
                        <div class="col-12 col-lg-6 pb-4">
                            <h4 class="d-flex justify-content-between align-items-center mb-4 text-info border-bottom border-secondary pb-2">
                                <span><i class="bi bi-truck me-2"></i>Detalles de envío</span>
                            </h4>
                            
                            <div class="row mb-3">
                                <div class="col-12 col-md-3">
                                    <label asp-for="OrderHeader.Name" class="form-label text-secondary">Nombre Completo</label>
                                </div>
                                <div class="col-12 col-md-9">
                                    <input asp-for="OrderHeader.Name" class="form-control" placeholder="Ej: Juan Pérez" />
                                    <span asp-validation-for="OrderHeader.Name" class="text-danger small fw-bold"></span>
                                </div>
                            </div>
                            
                            <div class="row mb-3">
                                <div class="col-12 col-md-3">
                                    <label asp-for="OrderHeader.PhoneNumber" class="form-label text-secondary">Teléfono</label>
                                </div>
                                <div class="col-12 col-md-9">
                                    <input asp-for="OrderHeader.PhoneNumber" class="form-control" placeholder="10 dígitos" />
                                    <span asp-validation-for="OrderHeader.PhoneNumber" class="text-danger small fw-bold"></span>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-12 col-md-3">
                                    <label asp-for="OrderHeader.Email" class="form-label text-secondary">Correo electrónico</label>
                                </div>
                                <div class="col-12 col-md-9">
                                    <input asp-for="OrderHeader.Email" class="form-control" placeholder="correo@ejemplo.com" />
                                    <span asp-validation-for="OrderHeader.Email" class="text-danger small fw-bold"></span>
                                </div>
                            </div>
                            
                            <div class="row mb-3">
                                <div class="col-12 col-md-3">
                                    <label asp-for="OrderHeader.StreetAddress" class="form-label text-secondary">Dirección</label>
                                </div>
                                <div class="col-12 col-md-9">
                                    <input asp-for="OrderHeader.StreetAddress" class="form-control" placeholder="Calle y número" />
                                    <span asp-validation-for="OrderHeader.StreetAddress" class="text-danger small fw-bold"></span>
                                </div>
                            </div>
                            
                            <div class="row mb-3">
                                <div class="col-12 col-md-3">
                                    <label asp-for="OrderHeader.City" class="form-label text-secondary">Ciudad</label>
                                </div>
                                <div class="col-12 col-md-9">
                                    <input asp-for="OrderHeader.City" class="form-control" />
                                    <span asp-validation-for="OrderHeader.City" class="text-danger small fw-bold"></span>
                                </div>
                            </div>
                            
                            <div class="row mb-3">
                                <div class="col-12 col-md-3">
                                    <label asp-for="OrderHeader.State" class="form-label text-secondary">Estado</label>
                                </div>
                                <div class="col-12 col-md-9">
                                    <input asp-for="OrderHeader.State" class="form-control" placeholder="Ej: CDMX" />
                                    <span asp-validation-for="OrderHeader.State" class="text-danger small fw-bold"></span>
                                </div>
                            </div>
                            
                            <div class="row mb-3">
                                <div class="col-12 col-md-3">
                                    <label asp-for="OrderHeader.PostalCode" class="form-label text-secondary">C.P.</label>
                                </div>
                                <div class="col-12 col-md-9">
                                    <input asp-for="OrderHeader.PostalCode" class="form-control" />
                                    <span asp-validation-for="OrderHeader.PostalCode" class="text-danger small fw-bold"></span>
                                </div>
                            </div>
                        </div>
                        
                        <!-- ── Order Items ─────────────────────────── -->
                        <div class="col-12 col-lg-5 offset-lg-1">
                            <h4 class="d-flex justify-content-between align-items-center mb-4 text-info border-bottom border-secondary pb-2">
                                <span><i class="bi bi-cart3 me-2"></i>Tu pedido</span>
                            </h4>
                            
                            <ul class="list-group mb-3 shadow-sm">
                                @foreach (var item in Model.ShoppingCartList)
                                {
                                    <li class="list-group-item d-flex justify-content-between lh-sm bg-surface border-secondary">
                                        <div>
                                            <h6 class="my-0 text-light">@item.Product.Name</h6>
                                            <small class="text-muted">Cantidad: <span class="fw-bold text-light">@item.Count</span></small>

                                            @if (!string.IsNullOrEmpty(item.SelectedOptions))
                                            {
                                                var opts = System.Text.Json.JsonSerializer.Deserialize<List<dynamic>>(item.SelectedOptions);
                                                if (opts != null)
                                                {
                                                    <div class="mt-2 p-2 rounded bg-dark border border-secondary">
                                                        @foreach (var opt in opts)
                                                        {
                                                            <small class="text-info d-block" style="font-size: 0.75rem;">
                                                                <i class="bi bi-check2-circle"></i> @opt.GetProperty("Name"): <span class="text-light">@opt.GetProperty("Value")</span>
                                                            </small>
                                                        }
                                                    </div>
                                                }
                                            }

                                            @if (!string.IsNullOrEmpty(item.SpecialNotes))
                                            {
                                                <small class="text-warning d-block mt-1" style="font-size: 0.75rem;">
                                                    <i class="bi bi-sticky-fill me-1"></i> @item.SpecialNotes
                                                </small>
                                            }
                                        </div>
                                        <span class="text-info fw-bold">@((item.Price * item.Count).ToString("c"))</span>
                                    </li>
                                }
                                <li class="list-group-item d-flex justify-content-between bg-dark border-secondary">
                                    <h5 class="text-light mb-0">Total (MXN)</h5>
                                    <h5 class="text-info fw-bold mb-0">@Model.OrderHeader.OrderTotal.ToString("c")</h5>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="card-footer py-4 border-top border-secondary bg-surface">
                <div class="row align-items-center">
                    <div class="col-12 col-md-8 mb-3 mb-md-0">
                        <p class="mb-0 text-secondary small">
                            <i class="bi bi-calendar-event me-2 text-info"></i>Fecha estimada de entrega:
                            <span class="fw-bold text-light">@DateTime.Now.AddDays(7).ToShortDateString() - @DateTime.Now.AddDays(14).ToShortDateString()</span>
                        </p>
                    </div>
                    <div class="col-12 col-md-4">
                        <button type="submit" class="btn btn-primary btn-lg w-100 py-3 shadow-info fw-bold text-uppercase">
                            Confirmar compra <i class="bi bi-chevron-right ms-1"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            $('form').submit(function() {
                if (!$(this).valid()) {
                    toastr.error('Por favor, completa correctamente los campos marcados en rojo antes de continuar.');
                }
            });
        });
    </script>
}