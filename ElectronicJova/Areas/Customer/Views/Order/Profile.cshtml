@using ElectronicJova.Models
@model ApplicationUser

@{
    ViewData["Title"] = "Mi perfil";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">

            <div class="d-flex align-items-center mb-4">
                <i class="bi bi-person-circle fs-1 text-primary me-3"></i>
                <div>
                    <h2 class="fw-bold mb-0">Mi perfil</h2>
                    <p class="text-muted mb-0 small">Administra tu información personal</p>
                </div>
            </div>

            @if (TempData["success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle me-2"></i>@TempData["success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <form method="post" asp-action="Profile">
                @Html.AntiForgeryToken()
                <div class="card border-0 shadow-sm">
                    <div class="card-body p-4">

                        <h5 class="fw-semibold mb-3 text-primary">
                            <i class="bi bi-person me-2"></i>Datos personales
                        </h5>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-medium">Nombre completo</label>
                            <input asp-for="Name" class="form-control" placeholder="Tu nombre completo" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-medium">Correo electrónico</label>
                            <input value="@Model.Email" class="form-control bg-light" disabled />
                            <div class="form-text">El correo no se puede cambiar desde aquí.</div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="form-label fw-medium">Teléfono</label>
                            <input asp-for="PhoneNumber" class="form-control" placeholder="Ej: +52 55 1234 5678" />
                            <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                        </div>

                        <hr class="my-4" />

                        <h5 class="fw-semibold mb-3 text-primary">
                            <i class="bi bi-geo-alt me-2"></i>Dirección de envío predeterminada
                        </h5>

                        <div class="mb-3">
                            <label asp-for="StreetAddress" class="form-label fw-medium">Calle y número</label>
                            <input asp-for="StreetAddress" class="form-control" placeholder="Ej: Av. Insurgentes 123" />
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="City" class="form-label fw-medium">Ciudad</label>
                                <input asp-for="City" class="form-control" placeholder="Ej: Ciudad de México" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="State" class="form-label fw-medium">Estado / Provincia</label>
                                <input asp-for="State" class="form-control" placeholder="Ej: CDMX" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PostalCode" class="form-label fw-medium">Código postal</label>
                            <input asp-for="PostalCode" class="form-control" placeholder="Ej: 06600" />
                        </div>

                    </div>
                    <div class="card-footer bg-white border-0 px-4 pb-4">
                        <button type="submit" class="btn btn-primary px-4 py-2 fw-semibold">
                            <i class="bi bi-floppy me-2"></i>Guardar cambios
                        </button>
                        <a asp-area="Customer" asp-controller="Order" asp-action="Index" class="btn btn-outline-secondary ms-2 px-4 py-2">
                            Cancelar
                        </a>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
