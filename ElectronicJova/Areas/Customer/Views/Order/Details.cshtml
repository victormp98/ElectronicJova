@using ElectronicJova.Models
@model OrderHeader

@{
    ViewData["Title"] = "Order Details";
}

<form>
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-primary bg-gradient text-light ml-0 py-4">
            <div class="row">
                <div class="col-12 text-center">
                    <h3 class="text-white">Order Details</h3>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="container rounded p-2">
                <div class="row">
                    <div class="col-12 col-lg-6 pb-4">
                        <div class="row">
                            <h4 class="d-flex justify-content-between align-items-center mb-3">
                                <span class="text-primary">Shipping Details:</span>
                            </h4>
                        </div>
                        <div class="row my-1">
                            <div class="col-3">
                                <label>Name</label>
                            </div>
                            <div class="col-9">
                                <input asp-for="Name" class="form-control" readonly />
                            </div>
                        </div>
                        <div class="row my-1">
                            <div class="col-3">
                                <label>Phone</label>
                            </div>
                            <div class="col-9">
                                <input asp-for="PhoneNumber" class="form-control" readonly />
                            </div>
                        </div>
                        <div class="row my-1">
                            <div class="col-3">
                                <label>Street Address</label>
                            </div>
                            <div class="col-9">
                                <input asp-for="StreetAddress" class="form-control" readonly />
                            </div>
                        </div>
                        <div class="row my-1">
                            <div class="col-3">
                                <label>City</label>
                            </div>
                            <div class="col-9">
                                <input asp-for="City" class="form-control" readonly />
                            </div>
                        </div>
                        <div class="row my-1">
                            <div class="col-3">
                                <label>State</label>
                            </div>
                            <div class="col-9">
                                <input asp-for="State" class="form-control" readonly />
                            </div>
                        </div>
                        <div class="row my-1">
                            <div class="col-3">
                                <label>Postal Code</label>
                            </div>
                            <div class="col-9">
                                <input asp-for="PostalCode" class="form-control" readonly />
                            </div>
                        </div>
                        <div class="row my-1">
                            <div class="col-3">
                                <label>Order Date</label>
                            </div>
                            <div class="col-9">
                                <input value="@Model.OrderDate.ToShortDateString()" class="form-control" readonly />
                            </div>
                        </div>
                        <div class="row my-1">
                            <div class="col-3">
                                <label>Tracking Number</label>
                            </div>
                            <div class="col-9">
                                <input asp-for="TrackingNumber" class="form-control" readonly />
                            </div>
                        </div>
                        <div class="row my-1">
                            <div class="col-3">
                                <label>Carrier</label>
                            </div>
                            <div class="col-9">
                                <input asp-for="Carrier" class="form-control" readonly />
                            </div>
                        </div>
                        <div class="row my-1">
                            <div class="col-3">
                                <label>Order Status</label>
                            </div>
                            <div class="col-9">
                                <input asp-for="OrderStatus" class="form-control" readonly />
                            </div>
                        </div>
                        <div class="row my-1">
                            <div class="col-3">
                                <label>Payment Status</label>
                            </div>
                            <div class="col-9">
                                <input asp-for="PaymentStatus" class="form-control" readonly />
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-5 offset-lg-1">
                        <h4 class="d-flex justify-content-between align-items-center mb-3">
                            <span class="text-primary">Order Summary:</span>
                        </h4>
                        <ul class="list-group mb-3">
                            @foreach (var item in Model.OrderDetails)
                            {
                                <li class="list-group-item d-flex justify-content-between lh-sm">
                                    <div>
                                        <h6 class="my-0">@item.Product.Title</h6>
                                        <small class="text-muted">Quantity: @item.Count</small>
                                    </div>
                                    <span class="text-muted">@(item.Count * item.Price).ToString("c")</span>
                                </li>
                            }
                            <li class="list-group-item d-flex justify-content-between">
                                <h5 class="text-primary">Total (USD)</h5>
                                <h5 class="text-primary">@Model.OrderTotal.ToString("c")</h5>
                            </li>
                        </ul>
                        <a asp-action="Index" asp-controller="Order" class="btn btn-secondary form-control">Back to Orders</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
