@model IEnumerable<ElectronicJova.Models.OrderHeader>
@using ElectronicJova.Utilities

@{
    ViewData["Title"] = "Mis Pedidos";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-light">
            <i class="bi bi-bag-check me-2 text-primary"></i>Mis Pedidos
        </h2>
        <a asp-controller="Home" asp-action="Index" asp-area="" class="btn btn-outline-secondary rounded-pill">
            <i class="bi bi-shop me-1"></i>Seguir Comprando
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-bag-x display-1 text-muted opacity-50"></i>
            <h4 class="mt-3 text-muted">AÃºn no tienes pedidos</h4>
            <a asp-controller="Home" asp-action="Index" asp-area="" class="btn btn-primary mt-3 rounded-pill px-4 shadow-primary">
                Explorar Productos
            </a>
        </div>
    }
    else
    {
        <div class="row g-3">
            @foreach (var order in Model)
            {
                var statusEnum = SD.ParseOrderStatus(order.OrderStatus);
                var isCancelled = order.OrderStatus == SD.StatusCancelled;

                <div class="col-12">
                    <div class="card border-secondary bg-card shadow-sm">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col-6 col-md-2 mb-3 mb-md-0">
                                    <small class="text-muted d-block text-uppercase fw-bold" style="font-size: 0.7rem;">Pedido #</small>
                                    <strong class="fs-5 text-light">@order.Id</strong>
                                </div>
                                <div class="col-6 col-md-3 mb-3 mb-md-0 text-end text-md-start">
                                    <small class="text-muted d-block text-uppercase fw-bold" style="font-size: 0.7rem;">Fecha</small>
                                    <span class="small text-light">@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</span>
                                </div>
                                <div class="col-6 col-md-2">
                                    <small class="text-muted d-block text-uppercase fw-bold" style="font-size: 0.7rem;">Total</small>
                                    <strong class="text-info h5 mb-0">@order.OrderTotal.ToString("c")</strong>
                                </div>
                                <div class="col-6 col-md-3 text-end text-md-start">
                                    <small class="text-muted d-block text-md-start text-uppercase fw-bold" style="font-size: 0.7rem;">Estado</small>
                                    @{
                                        var badgeClass = isCancelled ? "bg-danger" :
                                            order.OrderStatus == SD.StatusDelivered ? "bg-success" :
                                            order.OrderStatus == SD.StatusShipped ? "bg-info" : "bg-warning text-dark";
                                    }
                                    <span class="badge @badgeClass rounded-pill px-3 py-2 shadow-sm">
                                        <i class="bi @SD.GetOrderStatusIcon(order.OrderStatus) me-1"></i>
                                        @SD.GetOrderStatusLabel(order.OrderStatus)
                                    </span>
                                </div>
                                <div class="col-12 col-md-2 text-md-end mt-3 mt-md-0 pt-2 border-top border-secondary border-md-0 pt-md-0">
                                    <a asp-action="Details" asp-route-orderId="@order.Id"
                                       class="btn btn-outline-primary btn-lg w-100 btn-md-sm rounded-pill py-2">
                                        <i class="bi bi-eye me-1"></i>Ver Detalle
                                    </a>
                                </div>
                            </div>

                            @if (!isCancelled)
                            {
                                var step = (int)statusEnum;
                                var maxStep = 4;
                                var pct = Math.Min((step * 100) / maxStep, 100);

                                <!-- Mini barra de progreso -->
                                <div class="mt-3">
                                    <div class="progress bg-dark" style="height: 6px;">
                                        <div class="progress-bar bg-primary" style="width: @pct%"></div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
